<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<AnchorPane prefHeight="400.0" prefWidth="300.0" styleClass="background" xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="packman.view.MainMenuView">
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
    <children>
        <VBox layoutX="10.0" layoutY="10.0" prefHeight="380.0" prefWidth="280.0" AnchorPane.bottomAnchor="10.0"
              AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <VBox prefHeight="55.0" prefWidth="280.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <Text fx:id="usernameText" strokeType="OUTSIDE" strokeWidth="0.0" text="Username : "
                                      wrappingWidth="268.0"/>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="280.0">
                            <children>
                                <Text fx:id="highScoreText" strokeType="OUTSIDE" strokeWidth="0.0" text="High Score : "
                                      wrappingWidth="258.0"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <HBox alignment="CENTER" prefHeight="57.0" prefWidth="278.0">
                    <children>
                        <Region prefHeight="50.0" prefWidth="50.0"/>
                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@pacman.png"/>
                            </image>
                        </ImageView>
                        <Region prefHeight="57.0" prefWidth="10.0"/>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Pacman">
                            <font>
                                <Font size="23.0"/>
                            </font>
                        </Text>
                        <Region prefHeight="57.0" prefWidth="60.0"/>
                    </children>
                    <padding>
                        <Insets bottom="20.0" top="20.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </HBox>
                <Region prefHeight="15.0" prefWidth="280.0"/>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="280.0">
                    <children>
                        <Button fx:id="newGameButton" mnemonicParsing="false" onAction="#newGame" prefHeight="42.0"
                                prefWidth="130.0" styleClass="button" text="New Game"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="280.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#scoreboard" prefHeight="42.0" prefWidth="130.0"
                                styleClass="button" text="Score Board"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="280.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#setting" prefHeight="42.0" prefWidth="130.0"
                                styleClass="button" text="Setting"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="280.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#logout" prefHeight="42.0" prefWidth="130.0"
                                styleClass="button" text="Logout"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>

</AnchorPane>
